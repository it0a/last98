{{define "body"}}
<h1>Images</h1>
<table border="1">
<tr>
  <th>ID</th>
  <th>Description</th>
</tr>
  {{ range $index, $element := .Images}}
  <tr>
    <td>
      {{$element.ID.Value}}
    </td>
    <td>
      {{$element.Description.Value}}
    </td>
    <td>
      <form action="/images/delete" method="POST">
        <input type="hidden" value="{{$element.ID.Value}}" name="id"/>
        <input type="submit" value="Delete"/>
      </form>
    </td>
  </tr>
  {{end}}
</table>
<form action="/images" enctype="multipart/form-data" method="POST">
  <input type="file" name="file">
  <input name="description" type="text"/>
  <input type="submit"/>
</form>
{{end}}
